<body>
    <div id="wrapper">
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">게시글 수정</h1>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
    
                        <div class="panel-heading">
                            
                        </div>
                        <form id="frm" action="/boards/<%=params.bbsGroup%>/<%=board.bbsId%>?_method=PUT" method="POST" encType='multipart/form-data'>
                            <div class="panel-body">
                                <div class="col-sm-12">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon">분류</span>
                                        <select name="bbsGroup" class="form-control" >
                                            <option>나라 선택</option>
                                            <option>프랑스</option>
                                            <option>독일</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon">제목</span>
                                        <input type="text" class="form-control" name="bbsTitle" value="<%=board.bbsTitle%>" placeholder="제목을 입력해 주세요.">
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <textarea id="summernote" class="form-control" name="bbsContent"><%=board.bbsContent%></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <input type="file" name="atchFile" multiple>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <input type="submit" class="btn btn-default" value="저장">
                                <a href="/boards/<%=params.bbsGroup%>" class="btn btn-default">목록</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>    
    </div>
        <!-- summernote editor -->
        <script src="/summernote/summernote-lite.js"></script>
        <script src="/summernote/summernote-ko-KR.js"></script>
        <script type="text/javascript">
            $(document).ready(function() {
                summernote();
            });
    
            function summernote(){
                $("#summernote").summernote({
                    height : 400,
                    minHeight : null,
                    maxHeight : null,
                    focus : true,
                    lang : "ko-KR"
                });
            }
        
        </script>
</body>